        <!-- <position name="W-" tendon="W-" gear="1" kp="100"/> -->
        <!-- <position name="E+" tendon="E+" gear="1" kp="100"/> -->
        <!-- <position name="E-" tendon="E-" gear="1" kp="100"/> -->
        <!-- <position name="S+" tendon="S+" gear="1" kp="100"/> -->
        <!-- <position name="S-" tendon="S-" gear="1" kp="100"/> -->
        <!-- <position name="N+" tendon="N+" gear="1" kp="100"/> -->
        <!-- <position name="N-" tendon="N-" gear="1" kp="100"/> -->
    </actuator>
</mujoco>
